import { motion } from "framer-motion";

export default function FloatingBubble({ image, size = 60, delay = 0 }) {
  const startX = Math.random() * 100; // random start position
  const endX = startX + (Math.random() * 20 - 10); // slight sideways drift

  return (
    <motion.img
      src={image}
      alt=""
      className="pointer-events-none opacity-70"
      style={{
        position: "absolute",
        bottom: -100,
        left: `${startX}%`,
        width: size,
        height: size,
      }}
      animate={{
        y: ["0%", "-130vh"],
        x: [`${startX}%`, `${endX}%`],
        opacity: [0, 0.8, 0],
      }}
      transition={{
        duration: 12 + Math.random() * 8,
        ease: "easeOut",
        delay,
        repeat: Infinity,
      }}
    />
  );
}
